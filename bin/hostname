#!/usr/bin/env perl

use warnings;
use strict;

my $NEWLINE = "\n";

use Getopt::Long;
GetOptions(
    'n' => sub { $NEWLINE = '' },
);

my $hostname = `/usr/bin/hostname 2>/dev/null`;
chomp $hostname;

$hostname ||= `/bin/hostname 2>/dev/null`;

if($ENV{HOSTNAME}) {
    $hostname = $ENV{HOSTNAME};
}

print qq{$hostname$NEWLINE};
