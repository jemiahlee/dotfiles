#!/usr/bin/env perl

=head1 NAME

    sum - sum a list of values to a number amount

=head1 SYNOPSIS

    sum < <filename>
    sum <num1> <num2> [<num3>...]

    This script will generate a single value by summing the amounts
    provided.

=cut


use strict;
use warnings;

use Getopt::Long;
use Pod::Usage qw/pod2usage/;

GetOptions(
    'help|?' => sub { pod2usage(); },
);

my $sum = 0;

if( scalar(@ARGV) > 1 ){
    map { $sum += $_ } @ARGV;
}
else {
    while(<>) {
        next unless /^[-+]?(\d+)?(\.\d+)?$/;
        next unless $1 or $2;

        chomp;
        $sum += $_;
    }
}

print $sum, "\n";
